# WARNING: Do NOT edit this config file in ~/. Make sure you are editing the
# source file at ~/home_repo/home_dir and run bin/refreshHomeFromRepo to update.

[user]
    name = SirGnip
    email = SirGnip@users.noreply.github.com
[core]
    autocrlf = true
	fscache = true
[alias]
    l = log --oneline --decorate --color=auto --graph --all -n 20
    lg = log --oneline --decorate --color=auto --graph --all
    lg2 = log --graph --pretty='%h %ad %cn %d %s' --date=short --all --author-date-order
    s = status
    st = status
    difft = difftool -y
    diffdir = difftool --dir-diff
[push]
    # By default, tags aren't pushed. This setting pushes reachable, annotated tags: http://stackoverflow.com/a/26438076
    followTags = true
[http]
    sslVerify = false
[diff]
    tool = meld
[difftool "meld"]
    path = C:/Program Files (x86)/Meld/meld.exe

